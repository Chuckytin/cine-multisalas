<Window x:Class="CineMultisalas.Views.Comp.EditFunctionView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Función" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <!-- Película -->
            <Label Content="Película:" />
            <ComboBox x:Name="cmbFilm" DisplayMemberPath="Title" SelectedValue="{Binding SelectedFunction.FilmId}" />

            <!-- Sala -->
            <Label Content="Sala:" />
            <ComboBox x:Name="cmbCinema" DisplayMemberPath="Name" SelectedValue="{Binding SelectedFunction.CinemaId}" />

            <!-- Hora de inicio -->
            <Label Content="Hora de inicio:" />
            <DatePicker x:Name="dpStartTime" SelectedDate="{Binding SelectedFunction.StartTime}" />

            <!-- Hora de fin -->
            <Label Content="Hora de fin:" />
            <DatePicker x:Name="dpEndTime" SelectedDate="{Binding SelectedFunction.EndTime}" />

            <!-- Botón Guardar Cambios -->
            <Button Content="Guardar Cambios" Click="ButtonSave_Click" Margin="0,10" />
        </StackPanel>
    </Grid>
</Window>