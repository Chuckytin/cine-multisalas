<Window x:Class="CineMultisalas.Views.Comp.AddFilmView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Añadir Película" Height="450" Width="450"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Título:" />
            <TextBox x:Name="txtTitle" />
            <Label Content="Descripción:" />
            <TextBox x:Name="txtDescription" />
            <Label Content="Duración (min):" />
            <TextBox x:Name="txtDuration" />
            <Label Content="Género:" />
            <TextBox x:Name="txtGenre" />
            <Button Content="Guardar" Click="ButtonSave_Click" Margin="0,10" />
        </StackPanel>
    </Grid>
</Window>