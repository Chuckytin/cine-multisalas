<Window x:Class="CineMultisalas.Views.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inicio" Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <!-- Botones de navegación -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Películas" Command="{Binding NavigateToFilmsCommand}" Width="200" />
            <Button Content="Salas" Command="{Binding NavigateToCinemasCommand}" Width="200" />
            <Button Content="Funciones" Command="{Binding NavigateToFunctionsCommand}" Width="200" />
            <Button Content="Reservas" Command="{Binding NavigateToReservationsCommand}" Width="200" />
        </StackPanel>
    </Grid>
</Window>