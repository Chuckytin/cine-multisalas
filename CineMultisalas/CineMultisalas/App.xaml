<Application x:Class="CineMultisalas.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helpers="clr-namespace:CineMultisalas.Helpers"
             StartupUri="Views/LoginView.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <!-- Convertidor de booleanos a visibilidad -->
            <helpers:BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

            <!-- Referencia al archivo de estilos -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>

</Application>
